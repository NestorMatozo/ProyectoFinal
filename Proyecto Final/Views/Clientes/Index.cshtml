@model IEnumerable<ProyectoFinal_ParteAdmin.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes
</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Usuario.id_usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Usuario.nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.id_usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id_cliente">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.id_cliente">Ver más</a> |
                    <a asp-action="Delete" asp-route-id="@item.id_cliente">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
